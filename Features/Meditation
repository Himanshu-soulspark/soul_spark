    function showPage1() {
        document.getElementById('page1').style.display = 'block';
        document.getElementById('page2').style.display = 'none';
        document.getElementById('benefitPage').style.display = 'none';
        document.getElementById('videoPage').style.display = 'none';
        document.getElementById('videoPlayerPage').style.display = 'none';
        window.scrollTo(0, 0);
    }

    function showPage2() {
        document.getElementById('page1').style.display = 'none';
        document.getElementById('page2').style.display = 'block';
        document.getElementById('benefitPage').style.display = 'none';
        document.getElementById('videoPage').style.display = 'none';
        document.getElementById('videoPlayerPage').style.display = 'none';
        window.scrollTo(0, 0);
    }

    function showBenefitPage(meditationType) {
        document.getElementById('page1').style.display = 'none';
        document.getElementById('page2').style.display = 'none';
        document.getElementById('videoPage').style.display = 'none';
        document.getElementById('videoPlayerPage').style.display = 'none';
        const benefitPage = document.getElementById('benefitPage');
        const benefitContent = document.getElementById('benefitContent');
        
        if (benefits[meditationType]) {
            benefitContent.innerHTML = benefits[meditationType];
        } else {
            benefitContent.innerHTML = '<p>लाभ जल्द ही आ रहे हैं।</p>';
        }
        
        benefitPage.style.display = 'block';
        window.scrollTo(0, 0);
    }

    function showVideoPage(meditationType) {
        currentVideoCategory = meditationType;
        document.getElementById('page1').style.display = 'none';
        document.getElementById('page2').style.display = 'none';
        document.getElementById('benefitPage').style.display = 'none';
        document.getElementById('videoPlayerPage').style.display = 'none';
        const videoPage = document.getElementById('videoPage');
        const videoGrid = document.getElementById('video-grid-container');
        const videoPageTitle = document.getElementById('videoPageTitle');

        // Set page title
        const titleMap = {
            binaural: 'Binaural Videos',
            morning: 'Morning Videos',
            om: 'Om Videos',
            sleep: 'Sleep Meditation Videos',
            bird_singing: 'Bird Singing Videos',
            heaven_water: 'Heaven Water Videos',
            dreamer: 'Dreamer Videos',
            deep_sleep: 'Deep Sleep Videos',
            peaceful: 'Peaceful Videos',
            endless_sea: 'Endless Sea Videos',
            perfect_rain: 'Perfect Rain Videos',
            rainy_reflection: 'Rainy Reflection Videos',
            temple: 'Temple Videos',
            peace_happy: 'Peace & Happy Videos',
            soft_guitar: 'Soft Guitar Videos'
        };
        videoPageTitle.textContent = titleMap[meditationType] || 'Videos';


        // Clear previous videos
        videoGrid.innerHTML = '';

        // Populate video grid
        const videos = videoData[meditationType];
        if (videos && videos.length > 0) {
            videos.forEach(video => {
                const thumbnailUrl = `https://img.youtube.com/vi/${video.youtubeId}/0.jpg`;
                const videoCardHTML = `
                    <div class="thumbnail-card">
                        <img src="${thumbnailUrl}" alt="${video.title}">
                        <button class="btn open-btn" onclick="showVideoPlayerPage('${video.youtubeId}', '${video.title.replace(/'/g, "\\'")}')">Open</button>
                    </div>
                `;
                videoGrid.innerHTML += videoCardHTML;
            });
        }
        
        videoPage.style.display = 'block';
        window.scrollTo(0, 0);
    }
    
    function showVideoPlayerPage(youtubeId, title) {
        document.getElementById('videoPage').style.display = 'none';
        const playerPage = document.getElementById('videoPlayerPage');
        const player = document.getElementById('youtube-player');
        const playerTitle = document.getElementById('videoPlayerPageTitle');

        player.src = `https://www.youtube.com/embed/${youtubeId}?autoplay=1`;
        playerTitle.textContent = title;

        playerPage.style.display = 'block';
        window.scrollTo(0, 0);
    }

    function backToVideoPage() {
        document.getElementById('videoPlayerPage').style.display = 'none';
        const player = document.getElementById('youtube-player');
        player.src = ''; // Stop video playback
        if (currentVideoCategory) {
            showVideoPage(currentVideoCategory);
        } else {
            showPage1();
        }
    }

    // Search Functionality
    document.addEventListener('DOMContentLoaded', (event) => {
        const searchButton = document.querySelector('.search-button');
        const searchInput = document.querySelector('.search-input');

        function performSearch() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const cards = document.querySelectorAll('.grid-container .card');

            cards.forEach(card => {
                const titleElement = card.querySelector('.open-btn-main');
                if (titleElement) {
                    const title = titleElement.textContent.toLowerCase();
                    if (title.includes(searchTerm)) {
                        card.style.display = 'flex';
                    } else {
                        card.style.display = 'none';
                    }
                }
            });
        }

        searchButton.addEventListener('click', performSearch);
        
        // Optional: Allow searching by pressing Enter key
        searchInput.addEventListener('keyup', function(event) {
            if (event.key === 'Enter') {
                performSearch();
            }
        });
    });
    
</script>
</body>
</html>
